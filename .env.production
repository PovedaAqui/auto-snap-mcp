# Auto-Snap MCP Production Configuration
# Environment variables for production deployment

# Output Directory Configuration
AUTO_SNAP_OUTPUT_DIR="/opt/auto-snap/captures"
AUTO_SNAP_TEMP_DIR="/opt/auto-snap/temp"

# Enable hierarchical organization
AUTO_SNAP_USE_DATE_SUBDIRS=true
AUTO_SNAP_USE_SESSION_SUBDIRS=false

# File Naming Configuration
AUTO_SNAP_FILE_NAME_TEMPLATE="doc_{page:04d}"
AUTO_SNAP_INCLUDE_TIMESTAMP=true
AUTO_SNAP_TIMESTAMP_FORMAT=iso
AUTO_SNAP_CUSTOM_TIMESTAMP="%Y%m%d_%H%M%S"

# Output Format Configuration
AUTO_SNAP_IMAGE_FORMAT=png
AUTO_SNAP_IMAGE_QUALITY=95
AUTO_SNAP_PDF_COMPRESSION=true

# Session Management (can be set per project)
# AUTO_SNAP_SESSION_ID="production_$(date +%Y%m%d_%H%M%S)"
# AUTO_SNAP_PROJECT_NAME="document_capture"

# Cleanup Configuration
AUTO_SNAP_AUTO_CLEANUP_TEMP=true
AUTO_SNAP_TEMP_RETENTION_HOURS=12
AUTO_SNAP_MAX_TEMP_FILES=500

# Performance Mode (disable legacy mode for full features)
AUTO_SNAP_LEGACY_MODE=false